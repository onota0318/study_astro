import { useState } from "react";
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Responsive View</title>
    <link href="/dist/output.css" rel="stylesheet" />
  </head>
  <body class="bg-gray-100">
    <div class="flex flex-col md:flex-row">
      <div class="hidden bg-blue-500 p-4 md:block md:w-1/4">
        <!-- Left pane content -->
        <h2 class="text-white">Left Pane</h2>
        <p class="text-white">
          This pane is visible on screens 965px and above.
        </p>
      </div>
      <div class="w-full p-4 md:w-3/4">
        <!-- Main content -->
        <h1 class="text-gray-800">Main Content</h1>
        <p class="text-gray-600">This is the main content area.</p>
      </div>
    </div>
  </body>
</html>
